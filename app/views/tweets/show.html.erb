<h1>ツイート詳細</h1>

<p><span>email: </span><%= @user.email %></p>
<p><span>ツイート内容: </span><%= @tweet.body %></p>

<h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <a href="/users/<%= @tweet.user.id %>"><%= @user.email %></a>
    <%= c.content %>
    <hr>
  </div>
<% end %>

<%= form_with(model:[@tweet, @comment]) do |f| %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'コメントする' %>
  <%= flash[:success] %>
<% end %>

<%= link_to "ホームへ戻る", tweets_path %>